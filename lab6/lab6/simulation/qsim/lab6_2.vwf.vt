`timescale 1 ps/ 1 ps
module lab6_1_vlg_sample_tst(
	data_in,
	sampler_tx
);
input [2:0] data_in;
output sampler_tx;

reg sample;
time current_time;
always @(data_in)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

